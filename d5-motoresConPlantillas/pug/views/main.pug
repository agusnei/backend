doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Mi app
    body
      nav
        a(href="http://localhost:8080/api/productos" class="btn btn-dark") Productos
        br
        a(href="http://localhost:8080/api/productos/add" class="btn btn-dark") Agregar productos
        
      ul
        each val in productos
          h3 Producto: #{val.title}
          p Precio: #{val.price}
          img(src=`${val.thumbnail}` width="300" height="200")
      
      
        
        